<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hinhfb"
    tools:context=".Main3Activity">

    <com.facebook.login.widget.ProfilePictureView
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/imageprofilepictureview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />



    <TextView
        android:id="@+id/textviewname"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="Name"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textviewemail"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="Email"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textviewfirstname"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="First name"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_gravity="center"
        android:text="Đăng Xuất"
        android:id="@+id/buttondangxuat"
        android:background="#332F2F"
        android:textColor="#FDFCFC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btnchucnang"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="#DD1C1C"
        android:textColor="#FDFCFC"
        android:text="Các chức năng khác trong facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>