<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="194dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logobook2" />

    <EditText
        android:id="@+id/ettenmonhoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ten mon hoc" />
    <EditText
        android:id="@+id/etgiangvien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="giang vien" />

    <EditText
        android:id="@+id/edngaybd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ngay bat dau" />

    <EditText
        android:id="@+id/edngaykt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ngay ket thuc" />
</LinearLayout>
