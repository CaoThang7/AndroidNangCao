<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/khoahoc_item"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="10dp"
    android:elevation="5dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@android:color/holo_orange_dark"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tvTieuDe"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="#800000"
            android:gravity="center"
            android:text="Khoá Học"
            android:textColor="#FDE000"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvtenmonhoc"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/tvTieuDe"
            android:layout_alignParentLeft="true"
            android:layout_margin="4dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="left|center_vertical"
            android:text="Tên môn học" />

        <TextView
            android:id="@+id/tvgiangvien"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/tvtenmonhoc"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="left|center_vertical"
            android:text="Giảng viên" />

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/tvgiangvien"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_edit" />

        <TextView
            android:id="@+id/tvngaybd"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/tvgiangvien"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="left|center_vertical"
            android:text="Ngày bắt đầu" />

        <ImageView
            android:id="@+id/btnDel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/tvngaybd"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/tvngaykt"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/tvngaybd"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="left|center_vertical"
            android:text="Ngày kết thúc" />

        <TextView
            android:id="@+id/ktcSeparate"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvngaykt"
            android:layout_margin="8dp"
            android:background="@android:color/black" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>